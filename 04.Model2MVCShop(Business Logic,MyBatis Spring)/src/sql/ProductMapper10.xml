<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
		PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

 					
<mapper namespace="ProductMapper10">

	 <resultMap id="productSelectMap" type="product">
		<result property="prodNo" 			column="prod_no" 			jdbcType="INTEGER"/>
		<result property="prodName"	column="product_name" 		jdbcType="VARCHAR" />
		<result property="prodDetail" 	column="prod_detail" 		jdbcType="VARCHAR" />
		<result property="manuDate" 	column="manufacture_day" 					jdbcType="VARCHAR" />
		<result property="price" 				column="price" 					jdbcType="INTEGER" />
		<result property="fileName" 			column="image_file" 		jdbcType="VARCHAR" />
		<result property="regDate" 		column="reg_date" 			jdbcType="DATE" />
	</resultMap>
  	
  		<!-- SQL : INSERT /#과 $의 차이점:
		#:Parameter가 String형태로 들어와 자동적으로 Parameter형태가 됨
		$:Parameter가 바로 출력, 해당컬럼의 자료형에 맞추어 파라미터의 자료형 변경-->
  	
  	
  	<insert 	id="addProduct"  parameterType="product">
		INSERT
		INTO product( prod_no, prod_name, prod_detail, manufacture_day , price, image_file, reg_date) 
		VALUES(#{prodNo:INTEGER},
					   #{prodName},#{prodDetail} , #{manuDate} , 
					   #{price:INTEGER} , #{fileName}, 
					   #{regDate:DATE})				
  	</insert>
  	
  	<select 	id="getProduct"  parameterType="string"	resultMap="productSelectMap">
		SELECT
		prodNo , prodName , prodDetail , manuDate ,  price ,  fileName , reg_date 		
		FROM product 
		WHERE prodNo = #{value}					
  	</select>
	 	  
	 	  
	<update 	id="updateProduct"  parameterType="product">
		UPDATE product
		<set>
			<if test="productName!=null">product_name =#{productName},</if>
			<if test="password!=null">password =#{password},</if>
															age =#{age:INTEGER},
															grade	=<if test="grade==0">null</if>
					   			  										  <if test="grade!=0">#{grade}</if>
		</set>
		WHERE prod_no =#{prodNo}
		</update>
	 	  
  	<delete id="removeProduct"  parameterType="string">
  		DELETE
  		FROM product
  		WHERE prod_no= #{value}
  	</delete>
  	
  	
  	<sql id="select-products">
  		SELECT
  		product_id,product_name,password,age,grade,reg_date
  		FROM product
  	</sql>
  	
  	<sql id="orderby-productId-desc">
  		ORDER BY prod_no DESC
  	</sql>
  	
  	<select 	id="getProductList"  parameterType="mybatis.service.domain.Search"	resultMap="productSelectMap">
		<include refid="select-products"/>
		<where>
			<choose>
				<when test="searchCondition=='prodNo' ">
					<if test="prodNo.size !=0">
						prod_no IN
						<foreach item="value"	collection="prodNo" open="("		separator=","	close=")">
							#{value}
						</foreach>
			</if>
			</when>
			<when test="searchCondition=='prodName' ">
					<if test="prodName[0] !=null">
						product_name IN
						<foreach item="value"	collection="prodName" open="("		separator=","	close=")">
							#{value}
						</foreach>
					</if>
			</when>
			</choose>	
			</where>
			<include refid="orderby-productId-desc"/>
	</select>

</mapper>